@model WebBannuochoa.Models.NUOCHOA

@{
    ViewBag.Title = "xoanh";
    Layout = "~/Views/Admin/LayoutAdmin.cshtml";
}

<div class="content-box-header">
    <div class="panel-title">XÁC NHẬN THÔNG TIN NƯỚC HOA CẦN XÓA</div>
</div>

<h3>Bạn quyết định xóa sản phẩm này?</h3>
<div>
    <h4>NUOCHOA</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên nước hoa:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenNH)
        </dd>

        <dt>
            Giá bán:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Giaban)
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd style="width:600px;text-align:justify">
            @Html.DisplayFor(model => model.Mota)
        </dd>

        <dt>
            Thể tích:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Thetich)
        </dd>
        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ngaycapnhat)
        </dd>

        <dt>
            Số lượng tồn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Soluongton)
        </dd>

        <dt>
            Loại nước hoa:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Loai.TenLoai)
        </dd>

        <dt>
            Hãng sản xuất:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.HANG.TenH)
        </dd>
        <dt>
            Ảnh bìa:
        </dt>

        <dd>
            <img src="@Url.Content("~/Hinhsanpham/"+ Model.Anhbia)" width="120px" />
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-default" /> |
            @Html.ActionLink("Trở về", "Nuochoa")
        </div>
    }
</div>
