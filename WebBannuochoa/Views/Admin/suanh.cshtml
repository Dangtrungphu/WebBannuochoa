@model WebBannuochoa.Models.NUOCHOA

@{
    ViewBag.Title = "suanh";
    Layout = "~/Views/Admin/LayoutAdmin.cshtml";
}


<div class="content-box-header">
    <div class="panel-title">ĐIỀU CHỈNH THÔNG TIN NƯỚC HOA</div>
</div>
<form action="/Admin/suanh" method="post" enctype="multipart/form-data">

    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaNH)
        <div class="form-group">
            <div class="control-label col-md-2">Mã nước hoa:</div>
            <div class="col-md-10">
                <div style="font:18px; padding: 5px 0 0 5px"> @ViewBag.MaNH</div>
            </div>
        </div>
        <div class="form-group">
           
            <div class="control-label col-md-2"> Tên nước hoa:</div>
            <div class="col-md-3">
                @Html.EditorFor(model => model.TenNH, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenNH, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Giá bán:
            <div class="control-label col-md-2"> Giá bán:</div>
            <div class="col-md-3">
                @Html.EditorFor(model => model.Giaban, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Giaban, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="control-label col-md-2"> Mô tả:</div>
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Mota, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Mota, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="control-label col-md-2"> Thể tích: </div>
            <div class="col-md-3">
                @Html.EditorFor(model => model.Thetich, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Thetich, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           
            <div class="control-label col-md-2">  Ảnh bìa:</div>
            <div class="col-md-5">
                <input type="file" name="fileupload" />
                <img src="@Url.Content("~/Hinhsanpham/"+ Model.Anhbia)" style="width:150px;height:150px" />
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
           
            <div class="control-label col-md-2"> Ngày cập nhật:</div>
            <div class="col-md-3">
                @Html.EditorFor(model => model.Ngaycapnhat, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Ngaycapnhat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            
            <div class="control-label col-md-2"> Số lượng tồn:</div>
            <div class="col-md-3">
                @Html.EditorFor(model => model.Soluongton, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Soluongton, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
           
            <div class="control-label col-md-2">  Loại:</div>
            <div class="col-md-10">
                @Html.DropDownList("MaLoai")
            </div>
        </div>

        <div class="form-group">
            
            <div class="control-label col-md-2"> Hãng SX:</div>
            <div class="col-md-10">
                @Html.DropDownList("MaH")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    </form>

    <div>
        @Html.ActionLink("Trở về", "Nuochoa")
    </div>
